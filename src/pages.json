{
  "easycom": {
    "autoscan": true,
    "custom": {
      // uni-ui 规则如下配置
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue"
    }
  },
  "pages": [
    //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/air/index",
      "style": {
        "navigationBarTitleText": "空调",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "我的",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/login/login",
      "style": {
        "navigationBarTitleText": "登录",
        "enablePullDownRefresh": false
      }
    },
    {
      "path": "pages/detail/detail",
      "style": {
        "navigationBarTitleText": "空调控制",
        "enablePullDownRefresh": false
      }
    }
  ],
  "globalStyle": {
    "navigationBarTextStyle": "white",
    "navigationBarTitleText": "空调集控",
    "navigationBarBackgroundColor": "#409EFF",
    "backgroundColor": "#409EFF"
  },
  "tabBar": {
    "color": "#ffffff",
    "selectedColor": "#FFD700",
    "borderStyle": "white",
    "backgroundColor": "#409EFF",
    "list": [
      {
        "pagePath": "pages/index/index",
        "iconPath": "static/index-normal.png",
        "selectedIconPath": "static/index-selected.png",
        "text": "首页"
      },
      {
        "pagePath": "pages/air/index",
        "iconPath": "static/air-normal.png",
        "selectedIconPath": "static/air-selected.png",
        "text": "空调"
      },
      {
        "pagePath": "pages/my/my",
        "iconPath": "static/company-normal.png",
        "selectedIconPath": "static/company-selected.png",
        "text": "单位"
      }
    ],
    "position": "bottom"
  }
}
